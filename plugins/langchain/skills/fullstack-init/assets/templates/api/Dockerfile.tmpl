FROM ghcr.io/astral-sh/uv:python{{PYTHON_VERSION}}-bookworm-slim AS builder
WORKDIR /app

# Copy configuration files
COPY uv.lock pyproject.toml ./
COPY apps/api/pyproject.toml ./apps/api/
COPY packages/python/common/pyproject.toml ./packages/python/common/

# Copy source code (Required for building workspace members)
COPY packages/python/common/src ./packages/python/common/src
COPY apps/api/src ./apps/api/src

# Install dependencies
RUN uv sync --frozen --no-dev

FROM python:{{PYTHON_VERSION}}-slim
WORKDIR /app

# Copy virtual environment and source code
COPY --from=builder /app/.venv /app/.venv
COPY --from=builder /app/apps/api /app/apps/api
COPY --from=builder /app/packages/python/common /app/packages/python/common

ENV PATH="/app/.venv/bin:$PATH"
WORKDIR /app/apps/api

EXPOSE 8000
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]
