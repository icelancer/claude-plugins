[project]
name = "api"
version = "0.1.0"
description = "{{PROJECT_NAME_TITLE}} API"
readme = "README.md"
requires-python = ">={{PYTHON_VERSION}}"
dependencies = [
    "fastapi>=0.129.0",
    "uvicorn>=0.41.0",
    "common",
    "pydantic-settings>=2.13.1",
]

[tool.uv.sources]
common = { workspace = true }

[dependency-groups]
dev = [
    "httpx>=0.28.1",
    "pytest>=9.0.2",
    "pytest-asyncio>=1.3.0",
]

[tool.pytest.ini_options]
testpaths = ["tests"]
asyncio_mode = "auto"
asyncio_default_fixture_loop_scope = "function"
pythonpath = "."
