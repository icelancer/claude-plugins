import { Item } from "@/types/item";

interface ItemListProps {
    items: Item[];
    loading: boolean;
    onDelete: (id: number) => void;
}

export function ItemList({ items, loading, onDelete }: ItemListProps) {
    if (loading) {
        return <p className="text-gray-500 text-center py-4">Loading data...</p>;
    }

    return (
        <div className="space-y-4">
            <h2 className="text-xl font-semibold text-gray-800 dark:text-white">Items ({items.length})</h2>
            {items.length === 0 ? (
                <p className="text-gray-500">No items registered.</p>
            ) : (
                <ul className="space-y-3">
                    {items.map((item) => (
                        <li key={item.id} className="p-4 rounded-xl border border-gray-200 dark:border-zinc-700 flex justify-between items-start hover:shadow-md transition-shadow">
                            <div>
                                <h3 className="font-semibold text-lg text-blue-600 dark:text-blue-400">{item.title}</h3>
                                {item.description && <p className="text-gray-600 dark:text-gray-400 mt-1">{item.description}</p>}
                            </div>
                            <button
                                onClick={() => onDelete(item.id)}
                                className="text-red-500 hover:text-red-700 p-2 text-sm font-medium"
                            >
                                Delete
                            </button>
                        </li>
                    ))}
                </ul>
            )}
        </div>
    );
}
